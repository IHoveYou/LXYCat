<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_dialog_bg"
    android:orientation="vertical">

    <TextView

        android:id="@+id/dialog_single_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        tools:text="title"
        android:textColor="#FF43434A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialog_single_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="30dp"
        tools:text="#FF9B9BA5我们很重视您的使用体验，非常抱歉给您带来不便！"
        android:textColor="#FF9B9BA5"
        android:textSize="14sp" />

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFDDDEE1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_single_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="確定"
            android:textColor="#FF00BB2C"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
